<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/warna"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:src="@drawable/img_2" />

    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="250dp"
        android:layout_height="146dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/javascript" />

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Pengertian  Bahasa JavaScript"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/R_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppinsregular"
        android:text="JavaScript adalah Bahasa pemograman yang memungkinkan Web Developer untuk menerapkan fitur yang kompleks pada halaman web. Contoh fiturnya ialah animasi 2D/3D, Photo Sideshow, Autocomplete text suggestion, dan masih banyak lagi. JavaScript merupakan layer ke tiga dari Standar Website, dua diantaranya ialah HTML dan CSS."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/R_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_2"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Kelebihan  Bahasa JavaScript"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/R_txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_2"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="1.Ringan"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_4"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text=" 2. Mudah Dipelajari"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/R_txt_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_5"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="3.MultiPlatform Sistem Operasi"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_6"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="4.Dinamis"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_7"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Kelebihan  Bahasa JavaScript"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/R_txt_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_8"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="1. Script yang digunakan tidak terenkripsi"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_9"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="2. Tidak Konsisten"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_selanjutnya"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:fontFamily="@font/poppinsbold"
        android:text="selanjutnya"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_nextolahraga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        android:fontFamily="@font/poppinsbold"
        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>