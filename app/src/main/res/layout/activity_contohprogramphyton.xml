<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cardview_dark_background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        />


    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/phyton" />

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Contoh Program Bahasa Phyton"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/pythonn"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:src="@drawable/ph" />

    <TextView
        android:id="@+id/R_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pythonn"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Keterangan  Bahasa Pyhton"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/R_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_2"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Sintaks: variable_name = value Digunakan untuk mendeklarasikan variabel dengan nilai tertentu."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/R_txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_3"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinsregular"
        android:text="print digunakan untuk mencetak output ke konsol, dan input digunakan untuk mengambil input dari pengguna."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="10sp" />


    <Button
        android:id="@+id/btn_c1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:fontFamily="@font/poppinsbold"
        android:text="selanjutnya"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn_kembali"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:fontFamily="@font/poppinsbold"
        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="15dp" />




</RelativeLayout>