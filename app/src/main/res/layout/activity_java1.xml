<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/warna"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:src="@drawable/img_2" />

    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="250dp"
        android:layout_height="146dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/java" />

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Pengertian  Bahasa Java"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/R_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Java merupakan bahasa pemrograman yang digunakan secara luas untuk pengodean aplikasi web. Bahasa ini telah menjadi pilihan populer di antara developer selama lebih dari dua dekade, dengan jutaan aplikasi Java yang digunakan saat ini. Java merupakan bahasa multiplatform yang berorientasi pada objek dan berpusat pada jaringan yang dapat digunakan sebagai platform di dalamnya. Java merupakan bahasa pemrograman yang cepat, aman, dan andal untuk mengodekan segala sesuatu mulai dari aplikasi seluler dan perangkat lunak korporasi hingga aplikasi big data dan teknologi sisi server."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_2"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Kegunaaan  Bahasa Java"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/R_txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_2"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="1.Pengembangan Game"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/R_txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_4"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="2.Komputasi cloud "
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_5"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:text=" 3. Big Data "
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_6"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="4. Kecerdasan Buatan "
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_7"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:text=" 5. Internet of Things"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_selanjutnya"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:fontFamily="@font/poppinsbold"
        android:text="selanjutnya"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_nextolahraga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        android:fontFamily="@font/poppinsbold"
        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>