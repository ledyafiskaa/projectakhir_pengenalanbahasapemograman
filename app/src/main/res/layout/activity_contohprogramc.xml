<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cardview_dark_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/c" />

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Contoh Program Bahasa C"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/cc"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:src="@drawable/cc" />

    <TextView
        android:id="@+id/R_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cc"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Keterangan  Bahasa C"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/R_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_2"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="data_type variable_name; Digunakan untuk mendeklarasikan variabel dengan tipe data tertentu."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_3"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="printf digunakan untuk mencetak output ke layar, sedangkan scanf digunakan untuk mengambil input dari pengguna."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_4"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text=" If Statement:Fungsi: Mengizinkan eksekusi kondisional berdasarkan evaluasi kondisi."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />


    <Button
        android:id="@+id/btn_kolahraga"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="590dp"
        android:fontFamily="@font/poppinsbold"
        android:text="selanjutnya"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_nextolahraga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:fontFamily="@font/poppinsbold"

        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>

