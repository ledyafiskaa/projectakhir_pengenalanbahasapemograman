<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cardview_dark_background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        />


    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="224dp"
        android:layout_height="179dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/phpp" />

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Pengertian Bahasa PHP"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/R_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="PHP merupakan singkatan dari PHP : Hypertext Preprocessor adalah salah satu Bahasa scripting open source yang banyak digunakan oleh Web Developer untuk pengembangan Web. PHP banyak digunakan untuk membuat banyak project seperti Grafik Antarmuka (GUI), Website Dinamis, dan lain-lain."
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/R_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_2"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text=" a. Kelebihan Bahasa PHP"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/R_txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_3"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsregular"
        android:text=" 1. Memiliki Community yang besar"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_4"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsregular"
        android:text="2. Mudah Dipelajari"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_5"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsregular"
        android:text="  3. Open Souce"
        android:textColor="@color/black"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/R_txt_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_6"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinssemibold"
        android:text=" b. Kekurangan Bahasa PHP"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/R_txt_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_7"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsregular"
        android:text=" 1. Persaingan yang ketat"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_8"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsregular"
        android:text="  2. Mudah Dibajak "
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/R_txt_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_9"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsregular"
        android:text=" 3. Tidak dilengkapi dengan Tipe Data"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_kolahraga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:fontFamily="@font/poppinsbold"
        android:text="selanjutnya"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_nextolahraga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="680dp"
        android:fontFamily="@font/poppinsbold"
        android:text="kembali"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>